<!--index.wxml-->
<view class="container">
 <view class='con'>
    <view class="HotMoney_box">
        <view class='watchword' 
              style="">
          <view class='header' bindtap='tomyRecord'>
            <image src='{{userInfo.avatarUrl}}'  class='header_size'></image> 
          </view>

          <view class="setHotMoney">
          <!--倾听红包  -->
          <block wx:if="{{recording === false }}">
            <view class='setHotMoney_detail1' >

     
               <button class='qingting'
                bindtap='startRecord'>{{tips}}</button>

            </view>
            </block>
          <block wx:if="{{recording === true}}">
            <view class='setHotMoney_detail1' >

               <button class="qingting iconfont icon-huatong" 
                bindtap='stopRecord'>停止录音</button>

            </view>
            </block>
         

            <view class='shuoming'>
              {{shuoming}}
           </view>
            <view class='setHotMoney_detail'>
              <view class='setHotMoney_name fl' >赏金（元）</view>
              <input type='number' placeholder='填写金额' class='hotInput fr'
                     bindinput='MoneyInput'></input>
            </view>
            <view class='setHotMoney_detail'>
              <view class='setHotMoney_name fl' >数量（个）</view>
              <input type='number' placeholder='填写数量' class='hotInput fr'
                     bindinput='NumberInput'></input>
            </view>

            <view class="server">需支付￥{{fuwufee}}服务费,优先使用余额</view>
            <navigator url="./share/share?houBaoStyle={{houBaoStyle}}"
            class='VoiceBtn' bindtap='toShare'>生成语音倾听包</navigator>
          </view>


        </view>
    </view>

 </view>
</view>
