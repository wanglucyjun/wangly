<!--pages/index/Share/ShareHotMoney.wxml-->
<view class='container'>
  <view class='con'>
    <view class='topBox'style="background:url('../../image/lingquBg.png') no-repeat;background-size:750rpx 544rpx;">
      <view class='share_box'>
        <image src='{{hongbaoDetail.senderIcon}}'
              mode='widthFix' class='header'></image>
      </view>
      <view class="share_box">
        <view class='kouling'> {{hongbaoDetail.senderName}}</view>
      </view>
      <view class='ChangeHot'>
       <!--按住说出以上口令领取赏金-->
        <view style="{{hongbaoDetail.type==1?'display:block':'display:none'}}">
          <view class="share_box" >
            <view class='yuyin'><text class="iconfont icon-hongbao">{{hongbaoDetail.content.question}}  </text></view>
          </view>
        <view class='showLing' style="{{hongbaoDetail.state==1?'display:block':'display:none'}}" bindtouchstart='startRecord' bindtouchend='stopRecord'>按住说出以上口令领取赏金</view>
           <!--<view class='share_box_ju'>
            <view class="moneyNum">{{hongbaoDetail.allMoney}}<text class='fontSize'>元</text> </view>
          </view>-->
        </view>
        <!--按住收听真心话领取赏金-->
        <view style="{{hongbaoDetail.type==2?'display:block':'display:none'}}">
          <view class="share_box" >
            <view class='qingTing marTop' bindtap='playVoice' id='{{hongbaoDetail.content.question}}'>
              <text class="iconfont icon-bofang"> </text>
               点击收听真心话领取赏金
            </view>
            <!-- <view class='yuyin'><icon></icon> 发了一个语音口令</view> -->
          </view>
          <view class='share_box_ju'>
            <view class='showLing' hidden='true'>按住说出以上口令领取赏金</view>
            <view class="moneyNum">{{hongbaoDetail.allMoney}}<text class='fontSize'>元</text> </view> 
          </view>
        </view>
         <!--猜谜底领取赏金-->
        <view style="{{hongbaoDetail.type==3?'display:block':'display:none'}}">
          <view class="share_box" >
            <view class='qingTing marTop3'>{{hongbaoDetail.content.question}}</view>
          </view>
          <view class='share_box_ju'>
            <view class='answer'><input placeholder="请输入正确答案" auto-focus/></view> 
            <view class="moneyNum">{{hongbaoDetail.allMoney}}<text class='fontSize'>元</text> </view> 
          </view>
        </view>
      </view>

      <view class='share_box marginTop'>
        <view class="caozuoShare">
            <!--<view class=''><text class="iconfont icon-tixian"></text> 去提现</view>-->
            <view class=''><text class="iconfont1 icon-hongbao1">再发一个</text> </view>
            <view class=''><text class="iconfont1 icon-fenxiang">去转发</text> </view>
        </view>
      </view>
    </view>
    <view class='hotMoneyNum'>
        <view class='fl'>共{{hongbaoDetail.allMoney}}元，已领取{{hongbaoDetail.leftNum}}/{{hongbaoDetail.allNum}}个</view>
        <view class='fr'>投诉</view>
    </view>
    <block wx:for="{{hongbaoDetail.list}}" wx:key="url" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
              <view class='peopleMoney'>
      <view class='peopleMoney_Left fl'>
        <image src='{{item.iocn}}' mode='widthFix' class='header_logo'></image>
      </view>
      <view class='peopleMoney_center fl'>
        <text class='people_NickName'>{{item.name}}</text>
        <icon></icon>
        <view class='yuying_time' bindtap='playVoice' id='{{item.url}}'>{{item.length}}"</view>
      </view>
      <view class='peopleMoney_right fr'>
        <view class='yuying_time_right'>
          <view class='right_Num'>{{item.money}}元</view>
          <view class='right_time'>{{item.date}}</view>
        </view>
      </view>
    </view>
      </block>
    <view class='jilu'>查看我的记录</view>
    <view class='weilingqu'>未领取的金额，将于24小时后退还到余额</view>
  </view>
</view>
