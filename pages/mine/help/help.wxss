.help-list{

}
.help-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.help-list-item:first-child {
  margin-top: 0;
}
.help-list-text{
  flex: 1;
}

.help-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}
.help-list-item-hd-show {
  opacity: .2;
}
.help-list-item-bd {
  height: 0;
  overflow: hidden;
}
.help-list-item-bd-show {
  height: auto;
}